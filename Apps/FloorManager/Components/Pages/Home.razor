@page "/"
@using FloorManager.Components.Layout
@using FloorManager.Models

<PageTitle>Floor Manager</PageTitle>

<Breadcrumb Items="@_breadcrumbs"/>

<div style="text-align: center; padding: 50px;">
    <h1>🏰 Multi-Floor Dungeon Manager</h1>
    <p style="font-size: 1.2em; margin: 20px 0;">
        Explore the 6-floor music theory dungeon pyramid
    </p>
    <a href="/floors"
       style="display: inline-block; padding: 15px 30px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; text-decoration: none; border-radius: 8px; font-weight: 600; margin-top: 20px;">
        🚀 Launch Floor Viewer
    </a>
</div>

@code {
    private readonly List<BreadcrumbItem> _breadcrumbs = [new() { Text = "Home", Url = "/", Icon = "🏠" }];
}
