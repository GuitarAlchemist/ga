@page "/floors"
@using FloorManager.Components.Layout
@using FloorManager.Components.Shared
@using FloorManager.Models
@using FloorManager.Services
@inject FloorService FloorService
@inject IJSRuntime JsRuntime
@rendermode InteractiveServer

<PageTitle>Floor Manager</PageTitle>

<ConnectionStatus/>

<Breadcrumb Items="@_breadcrumbs"/>

<div class="floor-viewer-dark">
    <!-- Compact Top Bar -->
    <div class="top-bar-compact">
        <div class="floor-selector-compact">
            @for (var i = 0; i < 6; i++)
            {
                var floorNum = i;
                var isActive = _currentFloor == floorNum;
                var hasData = _floors.ContainsKey(floorNum);
                <button class="floor-btn @(isActive ? "active" : "") @(hasData ? "loaded" : "")"
                        @onclick="() => SelectFloor(floorNum)"
                        title="@GetFloorName(floorNum)">
                    <span class="floor-num">@floorNum</span>
                    @if (hasData)
                    {
                        <span class="loaded-dot">●</span>
                    }
                </button>
            }
        </div>

        <div class="controls-compact">
            <input type="number" @bind="_baseFloorSize" min="40" max="100" step="10" placeholder="Base Size"
                   title="Base Floor Size"/>
            <input type="number" @bind="_seed" placeholder="Seed" title="Random Seed"/>
            <button class="btn-generate" @onclick="LoadCurrentFloor" disabled="@_isLoading">
                @if (_isLoading)
                {
                    <text>⏳</text>
                }
                else
                {
                    <text>🎲 Generate</text>
                }
            </button>
            <button class="btn-all" @onclick="LoadAllFloors" disabled="@_isLoading" title="Generate All Floors">
                🏗️ All
            </button>
        </div>
    </div>

    @if (_errorMessage != null)
    {
        <div class="error-bar">⚠️ @_errorMessage</div>
    }

    <!-- Main Content: Side-by-Side 2D and 3D -->

    @if (CurrentFloorData != null)
    {
        <div class="info-bar">
            <span class="info-item">Floor @CurrentFloorData.Floor: @CurrentFloorData.FloorName</span>
            <span class="info-item">📐 @CurrentFloorData.Width×@CurrentFloorData.Height</span>
            <span class="info-item">🚪 @CurrentFloorData.Rooms.Count rooms</span>
            <span class="info-item">🎵 @CurrentFloorData.Rooms.Sum(r => r.Items.Count) items</span>
            <span class="info-item">🎲 Seed: @CurrentFloorData.Seed</span>
        </div>

        <div class="dual-view-container">
            <!-- 2D View -->
            <div class="view-panel">
                <div class="view-header">📐 2D View</div>
                <canvas id="floorCanvas" width="800" height="600"></canvas>
            </div>

            <!-- 3D View -->
            <div class="view-panel">
                <div class="view-header">🎮 3D View</div>
                <canvas id="floor3DCanvas" width="800" height="600"></canvas>
            </div>
        </div>

        <!-- Room List Below -->
        <div class="room-list-compact">
            <div class="room-list-header">
                🏠 Rooms with Items (@CurrentFloorData.Rooms.Count(r => r.Items.Count > 0))
            </div>
            <div class="room-grid-compact">
                @foreach (var room in CurrentFloorData.Rooms.Where(r => r.Items.Count > 0).OrderBy(r => r.Id))
                {
                    <div class="room-card-compact @(_selectedRoom?.Id == room.Id ? "selected" : "")"
                         @onclick="() => SelectRoom(room)">
                        <div class="room-id">#@room.Id</div>
                        <div class="room-category">@room.Category</div>
                        <div class="room-count">@room.Items.Count</div>
                    </div>
                }
            </div>

            @if (_selectedRoom != null)
            {
                <div class="room-details-compact">
                    <div class="details-header">
                        <span>🏠 Room #@_selectedRoom.Id - @_selectedRoom.Category</span>
                        <button class="btn-close-compact" @onclick="ClearSelection">✕</button>
                    </div>
                    <div class="details-content">
                        <span>📍 (@_selectedRoom.X, @_selectedRoom.Y)</span>
                        <span>📐 @_selectedRoom.Width×@_selectedRoom.Height</span>
                        <span>🎵 @_selectedRoom.Items.Count items</span>
                    </div>
                    <div class="items-list-compact">
                        @foreach (var item in _selectedRoom.Items.Take(20))
                        {
                            <span class="item-tag">@item</span>
                        }
                        @if (_selectedRoom.Items.Count > 20)
                        {
                            <span class="item-tag more">+@(_selectedRoom.Items.Count - 20) more</span>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state-dark">
            <div class="empty-icon">🏰</div>
            <h2>No Floor Loaded</h2>
            <p>Click a floor number above or click "Generate" to create a floor</p>
        </div>
    }
</div>

@code {
    private int _currentFloor;
    private int _baseFloorSize = 60; // Base size for Floor 0
    private int? _seed;
    private bool _isLoading;
    private string? _errorMessage;

    private readonly Dictionary<int, FloorData> _floors = new();
    private FloorData? CurrentFloorData => _floors.ContainsKey(_currentFloor) ? _floors[_currentFloor] : null;
    private Room? _selectedRoom;

    private readonly List<BreadcrumbItem> _breadcrumbs =
    [
        new() { Text = "Home", Url = "/", Icon = "🏠" },
        new() { Text = "Floor Viewer", Url = "/floors", Icon = "🏰" }
    ];

    // Calculate pyramid floor size: each floor gets larger as you go up
    private int GetFloorSize(int floor)
    {
        // Floor 0 (bottom) = baseFloorSize
        // Floor 5 (top) = baseFloorSize + (5 * 10) = baseFloorSize + 50
        return _baseFloorSize + floor * 10;
    }

    private string GetFloorName(int floor)
    {
        return floor switch
        {
            0 => "Set Classes",
            1 => "Forte Codes",
            2 => "Prime Forms",
            3 => "Chords",
            4 => "Chord Inversions",
            5 => "Chord Voicings",
            _ => "Unknown"
        };
    }

    private async Task LoadCurrentFloor()
    {
        _isLoading = true;
        _errorMessage = null;
        _selectedRoom = null;
        StateHasChanged();

        try
        {
            var floorSize = GetFloorSize(_currentFloor); // Use pyramid sizing
            var floor = await FloorService.GetFloorAsync(_currentFloor, floorSize, _seed);
            if (floor != null)
            {
                _floors[_currentFloor] = floor;
                await RenderFloor();
            }
            else
            {
                _errorMessage = $"Failed to load floor {_currentFloor}";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadAllFloors()
    {
        _isLoading = true;
        _errorMessage = null;
        _selectedRoom = null;
        StateHasChanged();

        try
        {
            _floors.Clear();
            // Load each floor with pyramid sizing
            for (var i = 0; i < 6; i++)
            {
                var floorSize = GetFloorSize(i);
                var floor = await FloorService.GetFloorAsync(i, floorSize, _seed);
                if (floor != null)
                {
                    _floors[i] = floor;
                }
            }

            if (CurrentFloorData != null)
            {
                await RenderFloor();
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task SelectFloor(int floorNum)
    {
        _currentFloor = floorNum;
        _selectedRoom = null;

        // If floor data doesn't exist, load it
        if (!_floors.ContainsKey(floorNum))
        {
            await LoadCurrentFloor();
        }
        else
        {
            // Floor already loaded, just render it
            await RenderFloor();
        }

        StateHasChanged();
    }

    private void SelectRoom(Room room)
    {
        _selectedRoom = room;
        StateHasChanged();
    }

    private void ClearSelection()
    {
        _selectedRoom = null;
        StateHasChanged();
    }

    private async Task RenderFloor()
    {
        if (CurrentFloorData == null) return;

        // Render both 2D and 3D views
        await JsRuntime.InvokeVoidAsync("renderFloor2D", "floorCanvas", CurrentFloorData);
        await JsRuntime.InvokeVoidAsync("renderFloor3D", "floor3DCanvas", CurrentFloorData);
    }

}

