@page "/floor-test"
@inject FloorService FloorService
@inject IJSRuntime JsRuntime
@rendermode InteractiveServer
@using FloorManager.Components.Layout
@using FloorManager.Models
@using FloorManager.Services
@implements IDisposable

<PageTitle>Floor Test - Compact View</PageTitle>

<Breadcrumb Items="@_breadcrumbs"/>

<!-- Always-Visible Status Bar -->
<div class="status-bar-always status-@_statusType">
    <div class="status-left">
        <span class="status-icon-always">
            @if (_isLoading || _isGenerating)
            {
                <span class="spinner-small">⏳</span>
            }
            else if (_statusType == "success")
            {
                <text>✅</text>
            }
            else if (_statusType == "warning")
            {
                <text>⚠️</text>
            }
            else if (_statusType == "error")
            {
                <text>❌</text>
            }
            else
            {
                <text>ℹ️</text>
            }
        </span>
        <span class="status-message-always">@_statusMessage</span>
    </div>

    <div class="status-right">
        @if (_showProgress)
        {
            <span class="status-progress-always">
                <span class="progress-text">@_progressCurrent/@_progressTotal</span>
                <div class="progress-mini">
                    <div class="progress-mini-fill"
                         style="width: @(_progressTotal > 0 ? _progressCurrent * 100.0 / _progressTotal : 0)%"></div>
                </div>
            </span>
        }

        <span class="status-stats">
            @if (_floors.Count > 0)
            {
                <text>@_floors.Count floors loaded</text>
            }
            else
            {
                <text>No floors loaded</text>
            }
        </span>
    </div>
</div>

<div class="compact-container">
    <!-- Section 1: Floor Selector (Horizontal) -->
    <div class="section floor-selector-section">
        <div class="section-header">
            <h3>🏰 Floors</h3>
            <button class="btn-generate-all-compact" @onclick="GenerateAllFloors" disabled="@_isGenerating">
                @if (_isGenerating)
                {
                    <span>⏳ Generating...</span>
                }
                else
                {
                    <span>⚡ Generate All</span>
                }
            </button>
        </div>

        <div class="floor-cards-horizontal">
            @for (var i = 0; i <= 5; i++)
            {
                var floorNum = i;
                var isSelected = _currentFloor == floorNum;
                var isLoaded = _floors.ContainsKey(floorNum);

                <div class="floor-card @(isSelected ? "selected" : "")"
                     @onclick="() => SelectFloor(floorNum)">
                    <div class="floor-card-number">@floorNum</div>
                    @if (isLoaded)
                    {
                        var data = _floors[floorNum];
                        <div class="floor-card-info">
                            <div class="floor-card-rooms">@data.Rooms.Count</div>
                            <div class="floor-card-label">rooms</div>
                        </div>
                    }
                    else
                    {
                        <div class="floor-card-info">
                            <div class="floor-card-status">—</div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Section 2: Room Selector (Compact Grid) -->
    @if (CurrentFloorData != null)
    {
        <div class="section room-selector-section">
            <div class="section-header">
                <h3>🚪 Rooms (@FilteredRooms.Count())</h3>
                <div class="room-controls-compact">
                    <input type="text"
                           placeholder="🔍 Search..."
                           @bind="_searchQuery"
                           @bind:event="oninput"
                           class="search-compact"/>

                    <select @bind="_selectedCategory" class="filter-compact">
                        <option value="">All</option>
                        @foreach (var category in GetCategories())
                        {
                            <option value="@category">@category</option>
                        }
                    </select>

                    <select @bind="_sortOption" class="sort-compact">
                        <option value="id">ID</option>
                        <option value="category">Category</option>
                        <option value="size">Size</option>
                        <option value="items">Items</option>
                    </select>
                </div>
            </div>

            <div class="room-grid-compact">
                @foreach (var room in FilteredRooms.Take(50))
                {
                    var isRoomSelected = _selectedRoom?.Id == room.Id;
                    <div class="room-card-compact @(isRoomSelected ? "selected" : "")"
                         @onclick="() => SelectRoom(room)"
                         style="border-left: 3px solid @room.Color;">
                        <div class="room-card-id">@room.Id.Replace($"floor{_currentFloor}_room", "R")</div>
                        <div class="room-card-category">@room.Category</div>
                        <div class="room-card-count">@room.Items.Count</div>
                    </div>
                }
            </div>

            @if (!FilteredRooms.Any())
            {
                <div class="no-results-compact">
                    <span>🔍 No rooms found</span>
                    <button class="btn-reset-compact" @onclick="ResetFilters">Reset</button>
                </div>
            }
        </div>
    }

    <!-- Section 3: Viewer (Canvas + Selected Room Details) -->
    @if (CurrentFloorData != null)
    {
        <div class="section viewer-section">
            <div class="viewer-layout">
                <!-- Canvas -->
                <div class="canvas-panel">
                    <div class="section-header">
                        <h3>📐 Floor Layout</h3>
                        <div class="stats-compact">
                            <span>@CurrentFloorData.Width×@CurrentFloorData.Height</span>
                            <span>•</span>
                            <span>@CurrentFloorData.Rooms.Count rooms</span>
                            <span>•</span>
                            <span>@CurrentFloorData.Rooms.Sum(r => r.Items.Count) items</span>
                        </div>
                    </div>
                    <div class="canvas-container-compact">
                        <canvas id="floorCanvas" width="600" height="450"></canvas>
                    </div>
                </div>

                <!-- Selected Room Details -->
                @if (_selectedRoom != null)
                {
                    <div class="room-details-panel-compact">
                        <div class="section-header">
                            <h3>🎵 @_selectedRoom.Id</h3>
                            <button class="btn-close-compact" @onclick="() => _selectedRoom = null">×</button>
                        </div>

                        <div class="room-details-content">
                            <div class="detail-grid">
                                <div class="detail-item">
                                    <span class="detail-label">Category</span>
                                    <span class="detail-value">@_selectedRoom.Category</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Position</span>
                                    <span class="detail-value">@_selectedRoom.X, @_selectedRoom.Y</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Size</span>
                                    <span class="detail-value">@_selectedRoom.Width × @_selectedRoom.Height</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Items</span>
                                    <span class="detail-value">@_selectedRoom.Items.Count</span>
                                </div>
                            </div>

                            @if (_selectedRoom.Items.Count > 0)
                            {
                                <div class="items-list-compact">
                                    <h4>Music Items</h4>
                                    <div class="items-scroll">
                                        @foreach (var item in _selectedRoom.Items)
                                        {
                                            <div class="item-chip">♪ @item</div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                else
                {
                    <div class="room-details-panel-compact empty">
                        <div class="empty-state-compact">
                            <div class="empty-icon">🎯</div>
                            <p>Select a room to view details</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else if (_currentFloor == null)
    {
        <div class="section viewer-section">
            <div class="empty-state-large">
                <div class="empty-icon">🏰</div>
                <h2>No Floor Selected</h2>
                <p>Select a floor above to get started</p>
            </div>
        </div>
    }
    else if (_isLoading)
    {
        <div class="section viewer-section">
            <div class="loading-state-large">
                <div class="spinner"></div>
                <p>Loading Floor @_currentFloor...</p>
            </div>
        </div>
    }
</div>

@code {
    private int? _currentFloor;
    private readonly Dictionary<int, FloorData> _floors = new();

    private FloorData? CurrentFloorData => _currentFloor.HasValue && _floors.ContainsKey(_currentFloor.Value)
        ? _floors[_currentFloor.Value]
        : null;

    private Room? _selectedRoom;
    private bool _isLoading;
    private bool _isGenerating;

    // Search and filter state
    private string _searchQuery = "";
    private string _selectedCategory = "";
    private string _sortOption = "id";

    // Status/Progress tracking
    private string _statusMessage = "Ready";
    private string _statusType = "info"; // info, success, warning, error
    private int _progressCurrent;
    private int _progressTotal;
    private bool _showProgress;
    private Timer? _statusTimer;

    private readonly List<BreadcrumbItem> _breadcrumbs =
    [
        new() { Text = "Home", Url = "/", Icon = "🏠" },
        new() { Text = "Floor Test", Url = "/floor-test", Icon = "🧪" }
    ];

    // Filtered rooms based on search and filters
    private IEnumerable<Room> FilteredRooms
    {
        get
        {
            if (CurrentFloorData == null) return [];

            var rooms = CurrentFloorData.Rooms.AsEnumerable();

            // Apply search filter
            if (!string.IsNullOrWhiteSpace(_searchQuery))
            {
                var query = _searchQuery.ToLower();
                rooms = rooms.Where(r =>
                    r.Id.ToLower().Contains(query) ||
                    r.Category.ToLower().Contains(query) ||
                    r.Items.Any(item => item.ToLower().Contains(query))
                );
            }

            // Apply category filter
            if (!string.IsNullOrWhiteSpace(_selectedCategory))
            {
                rooms = rooms.Where(r => r.Category == _selectedCategory);
            }

            // Apply sorting
            rooms = _sortOption switch
            {
                "category" => rooms.OrderBy(r => r.Category).ThenBy(r => r.Id),
                "size" => rooms.OrderByDescending(r => r.Width * r.Height),
                "items" => rooms.OrderByDescending(r => r.Items.Count),
                _ => rooms.OrderBy(r => r.Id)
            };

            return rooms;
        }
    }

    private IEnumerable<string> GetCategories()
    {
        if (CurrentFloorData == null) return [];
        return CurrentFloorData.Rooms.Select(r => r.Category).Distinct().OrderBy(c => c);
    }

    private void ClearSearch()
    {
        _searchQuery = "";
    }

    private void ResetFilters()
    {
        _searchQuery = "";
        _selectedCategory = "";
        _sortOption = "id";
    }

    private async Task SelectFloor(int floorNum)
    {
        _currentFloor = floorNum;
        _selectedRoom = null;

        // If floor data doesn't exist, load it
        if (!_floors.ContainsKey(floorNum))
        {
            await LoadFloor(floorNum);
        }
        else
        {
            // Floor already loaded, just render it
            await RenderFloor();
        }

        StateHasChanged();
    }

    private async Task LoadFloor(int floorNum)
    {
        _isLoading = true;
        ShowStatus($"Loading floor {floorNum}...", "info");
        StateHasChanged();

        try
        {
            var floorData = await FloorService.GetFloorAsync(floorNum);
            if (floorData != null)
            {
                _floors[floorNum] = floorData;
                await RenderFloor();

                var roomCount = floorData.Rooms.Count;
                var itemCount = floorData.Rooms.Sum(r => r.Items.Count);
                ShowStatus($"Floor {floorNum} loaded: {roomCount} rooms, {itemCount} items", "success");
                AutoHideStatus(3000);
            }
            else
            {
                ShowStatus($"Floor {floorNum} returned no data", "warning");
                AutoHideStatus(3000);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading floor {floorNum}: {ex.Message}");
            ShowStatus($"Error loading floor {floorNum}: {ex.Message}", "error");
            AutoHideStatus(5000);
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RenderFloor()
    {
        if (CurrentFloorData == null) return;

        try
        {
            await JsRuntime.InvokeVoidAsync("renderFloor", CurrentFloorData);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error rendering floor: {ex.Message}");
        }
    }

    private void SelectRoom(Room room)
    {
        _selectedRoom = room;
        StateHasChanged();
    }

    private async Task GenerateAllFloors()
    {
        _isGenerating = true;
        ShowStatus("Generating all floors...", "info", true);
        _progressTotal = 6;
        _progressCurrent = 0;
        StateHasChanged();

        try
        {
            for (var i = 0; i <= 5; i++)
            {
                _progressCurrent = i;
                ShowStatus($"Generating floor {i}...", "info", true);
                StateHasChanged();

                if (!_floors.ContainsKey(i))
                {
                    await LoadFloor(i);
                }
            }

            _progressCurrent = 6;
            ShowStatus("All floors generated successfully!", "success");
            AutoHideStatus(3000);
        }
        catch (Exception ex)
        {
            ShowStatus($"Error generating floors: {ex.Message}", "error");
            AutoHideStatus(5000);
        }
        finally
        {
            _isGenerating = false;
            StateHasChanged();
        }
    }

    private void ShowStatus(string message, string type, bool withProgress = false)
    {
        _statusMessage = message;
        _statusType = type;
        _showProgress = withProgress;
        StateHasChanged();
    }

    private void AutoHideStatus(int delayMs)
    {
        _statusTimer?.Dispose();
        _statusTimer = new Timer(_ =>
        {
            _showProgress = false;
            InvokeAsync(StateHasChanged);
        }, null, delayMs, Timeout.Infinite);
    }

    public void Dispose()
    {
        _statusTimer?.Dispose();
    }

}

