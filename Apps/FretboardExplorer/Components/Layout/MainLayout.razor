@inherits LayoutComponentBase

<MudThemeProvider/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@ToggleDrawer"/>
        <MudText Typo="Typo.h5" Class="ml-3">Fretboard Explorer</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit"/>
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="/fret-span-explorer" Icon="@Icons.Material.Filled.GridOn">Fret Span Explorer</MudNavLink>
            <MudNavLink Href="/chord-positions" Icon="@Icons.Material.Filled.MusicNote">Chord Positions</MudNavLink>
            <MudNavLink Href="/metadata-browser" Icon="@Icons.Material.Filled.DataObject">Metadata Browser</MudNavLink>
            <MudNavLink Href="/api-playground" Icon="@Icons.Material.Filled.Api">API Playground</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

}

