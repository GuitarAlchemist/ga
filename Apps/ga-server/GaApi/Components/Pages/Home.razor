@page "/"

<PageTitle>Home - Guitar Alchemist</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Welcome to Guitar Alchemist</MudText>
<MudText Typo="Typo.body1" Class="mb-4">
    AI-powered music theory and guitar learning platform with autonomous knowledge curation.
</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudCard Elevation="2" Class="pa-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h5">
                        <MudIcon Icon="@Icons.Material.Filled.Description" Class="mr-2"/>
                        Document Management
                    </MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Upload, manage, and search through processed music theory documents.
                    View extracted knowledge, summaries, and semantic search results.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/documents">
                    Go to Documents
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="6">
        <MudCard Elevation="2" Class="pa-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h5">
                        <MudIcon Icon="@Icons.Material.Filled.AutoGraph" Class="mr-2"/>
                        Retroaction Loop
                    </MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Monitor the autonomous curation workflow. View iteration history,
                    knowledge convergence graphs, and insight quality metrics.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/retroaction">
                    Go to Retroaction Loop
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="6">
        <MudCard Elevation="2" Class="pa-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h5">
                        <MudIcon Icon="@Icons.Material.Filled.Analytics" Class="mr-2"/>
                        SetClass Analysis
                    </MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Advanced music theory analysis using spectral graph theory and Grothendieck group operations.
                    Analyze pitch class sets, find transformations, and explore harmonic relationships.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/analysis">
                    Go to Analysis
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="6">
        <MudCard Elevation="2" Class="pa-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h5">
                        <MudIcon Icon="@Icons.Material.Filled.GraphicEq" Class="mr-2"/>
                        GraphQL API
                    </MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Explore the GraphQL API for document management, knowledge gap analysis,
                    and autonomous curation workflows.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" Href="/graphql" Target="_blank">
                    Open GraphQL
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>

    <MudItem xs="12" md="6">
        <MudCard Elevation="2" Class="pa-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h5">
                        <MudIcon Icon="@Icons.Material.Filled.Api" Class="mr-2"/>
                        REST API
                    </MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudText Typo="Typo.body2">
                    Browse the REST API documentation for music theory operations,
                    chord generation, and fretboard analysis.
                </MudText>
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Outlined" Color="Color.Primary" Href="/swagger" Target="_blank">
                    Open Swagger
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

<MudDivider Class="my-6"/>

<MudText Typo="Typo.h4" GutterBottom="true">System Status</MudText>
<MudGrid>
    <MudItem xs="12" md="4">
        <MudPaper Elevation="1" Class="pa-4">
            <MudText Typo="Typo.h6">MongoDB</MudText>
            <MudChip T="string" Color="Color.Success" Size="Size.Small">Connected</MudChip>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudPaper Elevation="1" Class="pa-4">
            <MudText Typo="Typo.h6">Ollama</MudText>
            <MudChip T="string" Color="Color.Warning" Size="Size.Small">Check Status</MudChip>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" md="4">
        <MudPaper Elevation="1" Class="pa-4">
            <MudText Typo="Typo.h6">Graphiti</MudText>
            <MudChip T="string" Color="Color.Info" Size="Size.Small">Optional</MudChip>
        </MudPaper>
    </MudItem>
</MudGrid>

