{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "GuitarAlchemist",
    "CollectionName": "ProcessedDocuments"
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "SummarizationModel": "llama3.2:latest",
    "EmbeddingModel": "nomic-embed-text",
    "MaxTokens": 4096,
    "Temperature": 0.7
  },
  "GoogleCloud": {
    "ProjectId": "your-project-id",
    "CredentialsPath": ""
  },
  "DocumentProcessing": {
    "MaxFileSizeMB": 50,
    "SupportedFormats": ["pdf", "md", "markdown", "txt"],
    "ChunkSize": 2000,
    "ChunkOverlap": 200
  }
}

