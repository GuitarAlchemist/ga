<div class="chord-card">
    <div class="chord-header">
        <h5 class="chord-name">@Chord.Name</h5>
        <span class="chord-score">@($"{Chord.Score:P0}")</span>
    </div>

    <div class="chord-details">
        <div class="chord-info">
            <span class="badge bg-primary">@Chord.Quality</span>
            @if (!string.IsNullOrEmpty(Chord.Extension))
            {
                <span class="badge bg-secondary">@Chord.Extension</span>
            }
            @if (!string.IsNullOrEmpty(Chord.StackingType))
            {
                <span class="badge bg-info">@Chord.StackingType</span>
            }
            <span class="badge bg-success">@Chord.NoteCount notes</span>
        </div>

        @if (Chord.Intervals.Any())
        {
            <div class="chord-intervals">
                <small class="text-muted">Intervals:</small>
                <div class="intervals-list">
                    @foreach (var interval in Chord.Intervals)
                    {
                        <span class="interval-badge">@interval</span>
                    }
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(Chord.Description))
        {
            <div class="chord-description">
                <small>@Chord.Description</small>
            </div>
        }

        @if (!string.IsNullOrEmpty(Chord.ParentScale))
        {
            <div class="chord-scale">
                <small class="text-muted">Parent Scale: <strong>@Chord.ParentScale</strong></small>
            </div>
        }
    </div>

    <div class="chord-actions">
        <button class="btn btn-sm btn-outline-primary" @onclick="() => OnFindSimilar.InvokeAsync(Chord.Id)">
            <i class="fas fa-search me-1"></i>Similar
        </button>
        <button class="btn btn-sm btn-outline-info" @onclick="() => OnGetDetails.InvokeAsync(Chord.Id)">
            <i class="fas fa-info-circle me-1"></i>Details
        </button>
    </div>
</div>

@code {
    [Parameter] public ChordSearchResult Chord { get; set; } = null!;
    [Parameter] public EventCallback<int> OnFindSimilar { get; set; }
    [Parameter] public EventCallback<int> OnGetDetails { get; set; }
}

