{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "guitar-alchemist",
    "Collections": {
      "Chords": "chords",
      "ChordTemplates": "chord-templates",
      "Scales": "scales",
      "Progressions": "progressions"
    }
  },
  "VectorSearch": {
    "PreferredStrategies": [
      "InMemory",
      "CUDA",
      "MongoDB"
    ],
    "EnableAutoSwitching": false,
    "AutoSwitchThreshold": 20.0,
    "PreloadStrategies": false,
    "MaxMemoryUsageMB": 2048
  }
}
