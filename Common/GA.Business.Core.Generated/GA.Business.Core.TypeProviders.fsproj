<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <!-- Preserve solution-level NoWarn and add project-specific suppressions -->
        <NoWarn>$(NoWarn);NU1608</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="StaticCollectionGenerator.fs"/>
    </ItemGroup>

    <ItemGroup>
        <!-- FSharp.Core is automatically included in F# projects -->
        <!-- Add Type Provider SDK -->
        <PackageReference Include="FSharp.TypeProviders.SDK" Version="8.1.0"/>
        <!-- Use an older version of FSharp.Compiler.Service that's compatible with newer FSharp.Core -->
        <PackageReference Include="FSharp.Compiler.Service" Version="41.0.7"/>
    </ItemGroup>

    <!-- Override vulnerable transitive dependencies with secure versions -->
    <ItemGroup>
        <PackageReference Include="System.Drawing.Common" Version="8.0.8">
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="System.Security.Cryptography.Xml" Version="8.0.1">
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="Microsoft.Build.Tasks.Core" Version="17.11.4">
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\GA.Business.Core\GA.Business.Core.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="..\GA.Core\GA.Core.csproj">
            <PrivateAssets>all</PrivateAssets>
        </ProjectReference>
    </ItemGroup>

    <PropertyGroup>
        <DisableImplicitFSharpCoreReference>true</DisableImplicitFSharpCoreReference>
    </PropertyGroup>

</Project>

