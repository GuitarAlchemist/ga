		<PackageReference Include="MudBlazor" Version="6.11.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\GA.Business.Core\GA.Business.Core.csproj" />
		<ProjectReference Include="..\GA.Core.UI\GA.Core.UI.csproj" />
	</ItemGroup>

</Project>
