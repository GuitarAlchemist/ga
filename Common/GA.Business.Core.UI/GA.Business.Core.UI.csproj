<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<Configurations>Debug;Release;net7.0</Configurations>
		<TargetFramework Condition="'$(Configuration)' == 'net7.0'">net7.0</TargetFramework>
		<TargetFramework Condition="'$(Configuration)' != 'net7.0'">net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<LangVersion Condition="'$(Configuration)' != 'net7.0'">preview</LangVersion>
		<EnablePreviewFeatures Condition="'$(Configuration)' != 'net7.0'">true</EnablePreviewFeatures>
	</PropertyGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Condition="'$(Configuration)' == 'net7.0'" Include="Microsoft.AspNetCore.Components.Web" Version="7.0.0" />
		<PackageReference Condition="'$(Configuration)' != 'net7.0'" Include="Microsoft.AspNetCore.Components.Web" Version="6.0.11" />
		<PackageReference Include="MudBlazor" Version="6.0.18" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\GA.Business.Core\GA.Business.Core.csproj" />
		<ProjectReference Include="..\GA.Core.UI\GA.Core.UI.csproj" />
	</ItemGroup>

</Project>
