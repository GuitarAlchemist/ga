<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup Label="Configuration">
		<TypeScriptTarget>ES2021</TypeScriptTarget>
		<TypeScriptNoImplicitAny>True</TypeScriptNoImplicitAny>
		<TypeScriptGeneratesDeclarations>False</TypeScriptGeneratesDeclarations>
	</PropertyGroup>

	<PropertyGroup>
		<Configurations>Debug;Release;net7.0</Configurations>
		<TargetFramework Condition="'$(Configuration)' == 'net7.0'">net7.0</TargetFramework>
		<TargetFramework Condition="'$(Configuration)' != 'net7.0'">net6.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<TypeScriptModuleKind>none</TypeScriptModuleKind>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<ItemGroup>
		<TypeScriptCompile Remove="wwwroot\js\blazorcomponents.ts" />
	</ItemGroup>

	<ItemGroup>
		<Content Include="wwwroot\js\blazorcomponents.ts" />
	</ItemGroup>


	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Condition="'$(Configuration)' == 'net7.0'" Include="Microsoft.AspNetCore.Components.Web" Version="7.0.0" />
		<PackageReference Condition="'$(Configuration)' != 'net7.0'" Include="Microsoft.AspNetCore.Components.Web" Version="6.0.11" />
		<PackageReference Include="Microsoft.TypeScript.MSBuild" Version="4.9.3">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\GA.Core\GA.Core.csproj" />
	</ItemGroup>

</Project>
