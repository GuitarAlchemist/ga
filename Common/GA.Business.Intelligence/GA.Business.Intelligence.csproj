    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <AssemblyName>GA.Business.Intelligence</AssemblyName>
    <RootNamespace>GA.Business.Intelligence</RootNamespace>
    <NoWarn>$(NoWarn);SKEXP0001</NoWarn>
